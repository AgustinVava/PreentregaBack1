<div class="d-flex justify-content-center align-items-center mb-2 mt-3">
<h2>PRODUCTS</h2>
</div>
<section class="d-flex flex-wrap justify-content-evenly">
  {{#each products}}
   <div class="card my-2" style="width: 18rem;">
    <div class="card-body">
      <img class="card-img-top" src={{this.photo}} alt="">
      <h5 class="card-title">{{this.title}}</h5>
      <p class="card-text">{{this.category}}</p>
      <a href="/products/{{this.id}}" class="btn btn-success">+info</a>
    </div>
  </div>
  {{/each}}
</section>